<odoo>
    <record id="view_auto_export_config_form" model="ir.ui.view">
        <field name="name">auto.export.config.form</field>
        <field name="model">auto.export.config</field>
        <field name="arch" type="xml">
            <form string="Scheduled Excel Export">
                <header>
                    <button
                        name="open_field_picker"
                        type="object"
                        string="Fields to Export"
                        class="oe_highlight"
                    />
                    <!--                    <button name="action_toggle_cron" type="object" string="Deactivate Cron" class="btn-danger"/>-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" invisible="1" />
                        <button
                            invisible="cron_active == True"
                            class="oe_stat_button"
                            name="action_toggle_cron"
                            type="object"
                            icon="fa-stop"
                        >
                            <div class="o_stat_info o_form_field">
                                <span
                                    style="font-weight: bold;"
                                    class="text-danger"
                                >Deactivate Scheduler</span>
                            </div>
                        </button>
                        <button
                            invisible="cron_active == False"
                            class="oe_stat_button"
                            name="action_toggle_cron"
                            type="object"
                            icon="fa-play"
                        >
                            <div class="o_stat_info o_form_field">
                                <span
                                    style="font-weight: bold;"
                                    class="text-success"
                                >Activate Scheduler</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="model_id" />
                            <field name="email_to" placeholder="e.g. demo@gmail.com" />
                            <field name="interval_type" />
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle" />
                            <field name="cron_nextcall" />
                            <field name="cron_id" readonly="1" />
                            <field name="email_template_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Fields to Export">
                            <group>
                                <field name="field_line_ids" nolabel="1">
                                    <list editable="bottom" create="0">
                                        <field name="sequence" widget="handle" />
                                        <field name="field_path" readonly="1" />
                                        <field name="field_label" />
                                    </list>
                                    <form string="Export Field">
                                        <group>
                                            <field name="field_path" />
                                            <!--                                    <field name="field_label"/>-->
                                        </group>

                                        <footer />
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page string="Domain">
                            <group>
                                <field name="res_model_name" invisible="1" />
                                <field
                                    name="domain_filter"
                                    nolabel="1"
                                    widget="domain"
                                    options="{'model': 'res_model_name'}"
                                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="view_auto_export_config_search" model="ir.ui.view">
        <field name="name">auto.export.config.search</field>
        <field name="model">auto.export.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="model_id" />
                <field name="interval_type" />
                <field name="email_to" />
                <field name="active" />
                <filter
                    name="filter_active"
                    string="Active"
                    domain="[('active', '=', True)]"
                />
                <filter
                    name="filter_inactive"
                    string="Inactive"
                    domain="[('active', '=', False)]"
                />
            </search>
        </field>
    </record>

    <record id="view_auto_export_config_list" model="ir.ui.view">
        <field name="name">auto.export.config.list</field>
        <field name="model">auto.export.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="model_id" />
                <field name="interval_type" />
                <field name="email_to" />
            </list>
        </field>
    </record>
    <record id="action_auto_export_config" model="ir.actions.act_window">
        <field name="name">Auto Export</field>
        <field name="res_model">auto.export.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a export
            </p>
            <p />
        </field>
    </record>
    <menuitem
        id="menu_auto_export_config"
        name="Auto Export"
        action="action_auto_export_config"
        parent="base.menu_automation"
    />
</odoo>
