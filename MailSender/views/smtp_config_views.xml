<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- SMTP Configuration List View -->
        <record id="view_mail_sender_smtp_tree" model="ir.ui.view">
            <field name="name">mail.sender.smtp.list</field>
            <field name="model">mail.sender.smtp</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="host"/>
                    <field name="port"/>
                    <field name="username"/>
                    <field name="encryption"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- SMTP Configuration Form View -->
        <record id="view_mail_sender_smtp_form" model="ir.ui.view">
            <field name="name">mail.sender.smtp.form</field>
            <field name="model">mail.sender.smtp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="host"/>
                                <field name="port"/>
                            </group>
                            <group>
                                <field name="username"/>
                                <field name="password" password="True"/>
                                <field name="encryption"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SMTP Configuration Action -->
        <record id="action_mail_sender_smtp" model="ir.actions.act_window">
            <field name="name">SMTP Configurations</field>
            <field name="res_model">mail.sender.smtp</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_mail_sender_root" name="Mail Sender" sequence="10"/>
        <menuitem id="menu_mail_sender_config" name="Configuration" parent="menu_mail_sender_root" sequence="20"/>
        <menuitem id="menu_mail_sender_smtp" action="action_mail_sender_smtp" parent="menu_mail_sender_config" sequence="10"/>
        <!-- Mail Sender Action -->
        <record id="action_mail_sender" model="ir.actions.act_window">
            <field name="name">Mail Sender</field>
            <field name="res_model">mail.sender</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_mail_sender_main" action="action_mail_sender" parent="menu_mail_sender_root" sequence="10"/>
    </data>
</odoo>