<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Mail Sender List View -->
        <record id="view_mail_sender_tree" model="ir.ui.view">
            <field name="name">mail.sender.list</field>
            <field name="model">mail.sender</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="subject"/>
                    <field name="smtp_config_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Mail Sender Form View -->
        <record id="view_mail_sender_form" model="ir.ui.view">
            <field name="name">mail.sender.form</field>
            <field name="model">mail.sender</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_mail" string="Send Mail" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="smtp_config_id"/>
                            </group>
                            <group>
                                <field name="recipient_emails"/>
                            </group>
                        </group>
                        <group>
                            <field name="subject"/>
                        </group>
                        <group>
                            <field name="body"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>